MAX_NEW_TOKENS_SUMMARY  = 192
MAX_NEW_TOKENS_ANSWER   = 64
BATCH_SIZE              = 2           # raise if you have spare VRAM

# deterministic, fast extraction
DO_SAMPLE = False
TEMPERATURE = 0.0
TOP_P = 1.0
REPETITION_PENALTY = 1.0

# fill policy
FILL_MISSING_TEXT = "N/A"
FILL_MISSING_LIST: List[str] = []

