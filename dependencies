def translate_to_english(model, tok, text, src_lang):
    inputs = tok(
        text,
        return_tensors="pt",
        truncation=True,
        max_length=2048,
        src_lang=src_lang,
        tgt_lang="en"
    ).to(model.device)

    with torch.no_grad():
        out = model.generate(
            **inputs,
            max_new_tokens=512,
            num_beams=4,
            early_stopping=True
        )

    return tok.decode(out[0], skip_special_tokens=True)
