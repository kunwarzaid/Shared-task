import numpy as np, matplotlib.pyplot as plt

configs = [
    ("Baseline (single LLM)", 70.2, 78.1),
    ("Safety-aware (+Rx + Test Safety)", 72.4, 82.4),
    ("Consensus (3Ã— LLMs)", 76.8, 62.3),
    ("Full Trust Pipeline (Consensus + Safety)", 78.6, 92.6),
]
x = np.array([c[1] for c in configs])
y = np.array([c[2] for c in configs])

plt.figure(figsize=(6,4))
plt.scatter(x, y)
coef = np.polyfit(x, y, 1); f = np.poly1d(coef)
xline = np.linspace(x.min()-1, x.max()+1, 100)
plt.plot(xline, f(xline))
plt.xlabel("Accuracy (%)"); plt.ylabel("Trust Index")
plt.title("Fig 1. Diagnostic Accuracy vs Trust Index")
plt.grid(True, alpha=0.3)
plt.tight_layout()
plt.show()
