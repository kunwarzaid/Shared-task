# -----------------------------
# Load CSV with proper header handling
# -----------------------------
csv_path = "Shared_task_results(Zaid).csv"

# The real headers start from the 3rd row, so skip the first two
df = pd.read_csv(csv_path, header=2)

# Clean up column names
df.columns = df.columns.str.strip()
print("✅ Columns loaded:", df.columns.tolist())

# Confirm Language column presence
if "Language" not in df.columns:
    raise ValueError("❌ 'Language' column not found. Please check header alignment.")

# Display a small preview
print("\n🔹 Data preview:\n", df.head(3))
